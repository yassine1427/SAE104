def lire_fasta(nom_fichier):
    sequences = {}
    with open(nom_fichier, 'r') as fichier:
        sequence_courante = ''
        nom_sequence = ''
        for ligne in fichier:
            ligne = ligne.strip()
            if ligne.startswith('>'):
                if nom_sequence:
                    sequences[nom_sequence] = sequence_courante
                nom_sequence = ligne[1:]
                sequence_courante = ''
            else:
                sequence_courante += ligne
        if nom_sequence:
            sequences[nom_sequence] = sequence_courante
    return sequences</pre>
